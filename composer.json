{
    "name": "toni/monorepo",
    "description": "Monorepo tools using splitsh-lite",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "homepage": "http://itstoni.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=5.6",
        "ext-json": "*",
        "symfony/finder": "^3.4 | ^4.1",
        "symfony/console": "^3.4 | ^4.1",
        "symfony/process": "^3.4 | ^4.1",
        "toni/splitsh": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 | ^6.5 | ^7.4",
        "symfony/filesystem": "^3.4 | ^4.1"
    },
    "autoload": {
        "psr-4": {
            "Monorepo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MonorepoTest\\": "tests/"
        }
    }
}
