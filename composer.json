{
    "name": "toni/monorepo",
    "description": "Monorepo tools using splitsh-lite",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Anthonius Munthi",
            "homepage": "http://itstoni.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    },
    "require": {
        "php": ">=7.0",
        "ext-json": "*",
        "gitonomy/gitlib": "^1.0",
        "justinrainbow/json-schema": "^5.2",
        "psr/log": "^1.1",
        "symfony/config": "^3.4 | ^4.1",
        "symfony/console": "^3.4 | ^4.1",
        "symfony/dependency-injection": "^3.4 | ^4.1",
        "symfony/dotenv": "^3.4 | ^4.1",
        "symfony/event-dispatcher": "^3.4 | ^4.1",
        "symfony/finder": "^3.4 | ^4.1",
        "symfony/process": "^3.4 | ^4.1",
        "symfony/yaml": "^3.4 | ^4.1",
        "toni/splitsh": "^1.0",
        "zendframework/zend-json": "^3.1"
    },
    "require-dev": {
        "seld/phar-utils": "^1.0",
        "symfony/filesystem": "^3.4 | ^4.1"
    },
    "autoload": {
        "psr-4": {
            "Monorepo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MonorepoTest\\": "tests/"
        }
    },
    "scripts": {
        "coverage": "phpunit --coverage-html=build/coverage/html --coverage-clover=build/coverage/clover.xml --colors=always",
        "test": "phpunit --colors=always"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
